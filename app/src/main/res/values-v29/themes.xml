<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 10+ (API 29+)에서 상태바/내비바 대비 강제(구분선 느낌의 스크림)를 끄기 -->
    <style name="Theme.NoSmokeTimer" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <!-- 기존 설정 유지 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 전환 후 아이콘 잔상 방지: 메인 테마는 흰 배경만 적용 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 대비 강제 해제: 얕은 상단 구분선 제거 -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- 오버레이 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.NoSmokeTimer.Splash" parent="Theme.SplashScreen">
        <!-- Pre-12: 아이콘 표시를 위해 layer-list 배경 사용 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- 백포트 제약: Vector 또는 PNG/JPG/WEBP만 지원 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_foreground_288</item>
        <item name="postSplashScreenTheme">@style/Theme.NoSmokeTimer</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 대비 강제 해제 및 오버레이 제거 -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
