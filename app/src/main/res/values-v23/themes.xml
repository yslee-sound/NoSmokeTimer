<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- API 23+ 전용: 상태바 아이콘을 어둡게 표시하여 흰 배경 위에서도 가독성 확보 -->
    <style name="Theme.NoSmokeTimer" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 전환 후 아이콘 잔상 방지: 메인 테마는 흰 배경만 적용 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 상단 경계선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.NoSmokeTimer.Splash" parent="Theme.SplashScreen">
        <!-- Pre-12: 아이콘 표시를 위해 layer-list 배경 사용 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_foreground_288</item>
        <item name="postSplashScreenTheme">@style/Theme.NoSmokeTimer</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 상단 경계선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
