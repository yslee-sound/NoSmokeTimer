<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 앱 전역 테마: 플랫폼에 존재하는 NoActionBar 테마를 부모로 사용 -->
    <style name="Theme.NoSmokeTimer" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <!-- 상태바를 시스템이 항상 표시하도록 보장 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 상태바 배경은 흰색 (라이트 테마에 맞춤) -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- 초기 프레임에서 스플래시 배경과 동일하게 표시 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- 일부 기기에서 상태바 아래 얇은 선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 스플래시 테마(Pre-Android 12 + backport용) -->
    <style name="Theme.NoSmokeTimer.Splash" parent="Theme.SplashScreen">
        <!-- 즉시 흰 화면 보장 + 중앙에 새 아이콘 표시 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!-- backport가 읽는 속성들 (호환 사용 시 적용) -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- 백포트 제약: Vector 또는 PNG/JPG/WEBP만 지원 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.NoSmokeTimer</item>
    </style>
</resources>
