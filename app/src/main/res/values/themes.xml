<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 앱 전역 테마: 플랫폼에 존재하는 NoActionBar 테마를 부모로 사용 -->
    <style name="Theme.NoSmokeTimer" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <!-- 상태바를 시스템이 항상 표시하도록 보장 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 상태바 배경은 흰색 (라이트 테마에 맞춤) -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- 전환 후 아이콘 잔상 방지: 메인 테마는 흰 배경만 적용 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 일부 기기에서 상태바 아래 얇은 선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 스플래시 테마(Pre-Android 12 + backport용) -->
    <style name="Theme.NoSmokeTimer.Splash" parent="Theme.SplashScreen">
        <!-- Pre-12에서 아이콘을 표시하려면 layer-list windowBackground 필요 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- 백포트 제약: Vector 또는 PNG/JPG/WEBP만 지원 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.NoSmokeTimer</item>
    </style>
</resources>
